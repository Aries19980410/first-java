<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rj.mapper.GoodsMapper">


    <insert id="add">
        insert into goods (good_name,price,remark,create_time) values (#{goodName},#{price},#{remark},#{createTime})
    </insert>
    <delete id="remove">
        delete from goods where id=#{id}
    </delete>
    <select id="detail" resultType="com.rj.entity.Goods">
        select * from goods where id=#{id}
    </select>
</mapper>
